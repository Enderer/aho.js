{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest",
      "args": [
        "--config=${workspaceRoot}\\jest.config.js",
        "--runInBand",
        "--watchAll"
      ],
      "sourceMaps": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}