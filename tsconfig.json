{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist/lib",
    "strict": true,
    "lib": ["es2017.object", "ES2018", "DOM"],
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules", 
    "__tests__", 
    "**/*.test.ts"
  ]
}